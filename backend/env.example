# Database (SQLite for development - no setup required!)
DATABASE_URL=sqlite+aiosqlite:///./reddit_sentiment.db
DATABASE_URL_SYNC=sqlite:///./reddit_sentiment.db

# For PostgreSQL production, use:
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/reddit_sentiment
# DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5432/reddit_sentiment

# Redis (optional - not used in SQLite mode)
REDIS_URL=redis://localhost:6379/0

# Ollama LLM
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Application
APP_NAME=Reddit Sentiment Analyzer
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# Reddit scraping
REDDIT_USER_AGENT=RedditSentimentAnalyzer/2.0 (by /u/your_username)
REDDIT_RATE_LIMIT_DELAY=2.0
